%html
  / %audio{id:'dice_sound', src:random_dice_sound, autoplay:'autoplay'}
  %script(src="http://code.jquery.com/jquery-1.11.3.min.js")
  %script(src="js/app.js")
  %head
    %title Thornwatch Dice Roller
    %link(rel="stylesheet" href="http://yui.yahooapis.com/2.8.0r4/build/reset/reset-min.css")
    %link(rel="stylesheet" href="css/styles.css")
    / from https://github.com/daneden/animate.css:
    %link(rel="stylesheet" href="css/animate.min.css")
  %body
    %br
    .results
      %table.roll_table.visible
        - rolls = @roll_results.each_slice(3).to_a
        - ap rolls
        - rolls.each do |row|
          %tr.white_boxed
            - row.each do |r|
              - image = r.to_s == 'empty' ? 'empty.png' : "#{r.to_s}.svg"
              %td.black_boxed
                %img.result_image{src:"/images/#{image}"}
        %tr
          %table.roll_table
            %tr
              %td.black_boxed
                %form{action:'die_select', method:'link'}
                  %input.hcentered.roll_button{type:'submit', value:'Roll again!'}
    - if @testing
      %button{style:'margin: 10 10 10 10', onclick:'Refresh()'} RELOAD PAGE
      %hr
      %button{style:'margin: 10 10 10 10', id: 'hide', onclick:'show_chooser_wrapper()'} SHOW CHOOSER
      %hr
      %button{style:'margin: 10 10 10 10', id: 'show', onclick:'show_results_wrapper()'} SHOW RESULTS
      %hr
      %button{style:'margin: 10 10 10 10', onclick:"document.getElementById('dice_sound').play()" } TEST SOUND
